            <%= item_fields.label :quantity, "ТЋ░жЄЈ", class: "block text-sm text-gray-600 dark:text-gray-300" %>
            <%= item_fields.number_field :quantity, class: "w-24 px-3 py-2 border rounded-lg dark:bg-gray-700 dark:text-white dark:border-gray-600" %>
            <%= link_to 'тЋєтЊЂсѓњтЅіжЎц', '#', class: "text-black bg-blue-500 rounded-lg"%>
          </div>
        <% end %>
      </div>

      <div class="flex items-center mt-10 gap-4">
        <%= f.submit 'ТЏ┤Тќ░сЂЎсѓІ', class: "px-6 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-lg hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" %>

        <%= link_to 'сѓГсЃБсЃ│сѓ╗сЃФ', shopping_lists_path,
            class: "px-6 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-gray-600 rounded-lg hover:bg-gray-500 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-80" %>
      </div>
    <% end %>

  </div>
</div>
