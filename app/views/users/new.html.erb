<section class="max-w-3xl mx-auto px-4 py-12 bg-white dark:bg-gray-800 rounded-lg shadow">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-800 dark:text-white">新規登録</h2>

  <%= form_with model: @user, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, "名前", class: "block text-gray-700 dark:text-gray-300 mb-1" %>
      <%= f.text_field :name, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, "Email", class: "block text-gray-700 dark:text-gray-300 mb-1" %>
      <%= f.email_field :email, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "パスワード", class: "block text-gray-700 dark:text-gray-300 mb-1" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-gray-700 dark:text-gray-300 mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="text-center">
      <%= f.submit "登録", class: "px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-500 transition" %>
    </div>
  <% end %>
</section>
